<div class="container">
  <h4 class="fw-bold">Public Recipes</h4>
  <div id="li-cards">
    <% @recipes.each do |recipe| %>
      
       <div class="mt-2 p-1 bg-light text-black rounded" >
        <div class="row"> 
          <div class="col-sm-4"> 
          <br>
              <strong class="card-strong text-decoration-none"><%= link_to recipe.name, recipe_path(recipe.id) %></strong>
              <h3 class="card-title fw-bold">By: <%= recipe.user.name %></h3>
          </div>
          <div class="col-sm-8">
              <p>Total food items: <%= recipe.recipe_foods.length || 0 %></p>
              <p> Total price: </p>
          </div>
      </div>
  
    <% end %>
  </div>
</div>