<div class="container-fluid d-flex flex-column justify-content-center align-items-center">
  <h4 class="fw-bold">Public Recipes</h4>
  <div id="li-cards">
    <% @recipes.each do |recipe| %>
      
      <div class="card-body " id="card-body">
         <div class="card1" >
              <strong class="card-strong text-decoration-none"><%= link_to recipe.name, recipe_path(recipe.id) %></strong>
              <h2 class="card-title fw-bold">By: <%= recipe.user.name %></h2>
          </div>
         <div class="card2">
              <p>Total food items: <%= recipe.recipe_foods.length || 0 %></p>
        
              <p> Total price: </p>
          </div>
      </div>
  
    <% end %>
  </div>
</div>