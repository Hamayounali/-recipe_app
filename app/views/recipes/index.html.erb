<div class="container">
 <%= link_to "Add New Recipe", new_recipe_path, class: "btn btn-secondary"  %>
<p style="color: green"><%= notice %></p>

 <div id="recipes">
  <% @recipes.each do |recipe| %>

    <div class="mt-2 p-1 bg-primary text-white rounded" >
    <div class="row"> 
      <div class="col-sm-4"> 
      <br>
         <h3><%= recipe.name %></h3>
          <%= button_to "Remove", recipe, method: :delete, class: "btn btn-secondary" %><br>
          <%= link_to "Details", recipe, class: "btn btn-secondary" %>
      </div>
      <div class="col-sm-8">
      <br>
        <%= recipe.description %> 
        
      </div>
      </div>
    </div>
  <% end %>
 </div>
</div>
</div>
